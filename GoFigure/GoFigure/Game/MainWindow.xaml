<Window x:Class="GoFigure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoFigure"
        mc:Ignorable="d"
        Title="Go Figure Game" MinHeight="720" MinWidth="1280" MaxHeight="720" MaxWidth="1280">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">


        <Button x:Name="button" HorizontalAlignment="Right" Margin="0,10,10,0" BorderBrush="#00707070" Foreground="#00000000" Width="20" Click="button_Click" Height="20" VerticalAlignment="Top">
            <Button.Background>
                <ImageBrush ImageSource="/GoFigure;component/icons/menuIcon.png"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="time_textbox" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" TextAlignment="Center" Background="Transparent" BorderBrush="#00ABADB3" SelectionBrush="#003399FF" FontSize="20" FontFamily="Stencil" IsReadOnly="True" MouseEnter="time_textbox_MouseEnter" HorizontalAlignment="Left"/>
        <Canvas Name="canvaslevel" MinHeight="690" MinWidth="1280" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>
</Window>
