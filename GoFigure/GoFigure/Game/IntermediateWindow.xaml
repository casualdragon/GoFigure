<Window x:Class="GoFigure.Game.IntermediateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoFigure.Game"
        mc:Ignorable="d"
        Title="IntermediateWindow" MaxHeight="720" MinHeight="720" MaxWidth="1280" MinWidth="1280">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/GoFigure;component/images/pixelbackgound.png"/>
        </Grid.Background>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" Text="Options" VerticalAlignment="Top" TextAlignment="Center" Background="Transparent" BorderBrush="#00ABADB3" Foreground="White" FontFamily="Showcard Gothic" FontSize="72"/>
        <Button x:Name="button" Content="Level Select" HorizontalAlignment="Center" Margin="441,200,134.6,0" VerticalAlignment="Top" Background="#00DDDDDD" Foreground="White" BorderBrush="#00707070" FontSize="36" RenderTransformOrigin="-0.946,0.455" Click="button_Click" Width="186"/>
        <Button x:Name="button_Copy" Content="Restart" HorizontalAlignment="Center" Margin="194,200,445.6,0" VerticalAlignment="Top" Width="122" Background="#00DDDDDD" Foreground="White" BorderBrush="#00707070" FontSize="36" Click="button_Copy_Click"/>

    </Grid>
</Window>
